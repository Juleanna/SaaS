[flake8]
# Flake8 configuration for Django project

# Maximum line length
max-line-length = 120

# Exclude directories
exclude =
    .git,
    __pycache__,
    */migrations/*,
    venv,
    env,
    .venv,
    dist,
    build,
    *.egg-info,
    .tox,
    .pytest_cache,
    node_modules,
    staticfiles,
    media

# Ignore specific errors
ignore =
    # E203: whitespace before ':' (conflicts with Black)
    E203,
    # W503: line break before binary operator (conflicts with Black)
    W503,
    # E501: line too long (handled by Black)
    E501,
    # F401: imported but unused (sometimes needed for Django)
    # F401,

# Maximum complexity
max-complexity = 10

# Show source code for each error
show-source = True

# Count errors
count = True

# Warn about unused imports
per-file-ignores =
    # Allow unused imports in __init__.py
    __init__.py:F401,F403
    # Allow unused imports in settings.py
    */settings.py:F401,F403,E501
    # Allow long lines in migrations
    */migrations/*.py:E501
    # Allow fixtures with unused arguments
    conftest.py:F811

# Django-specific settings (requires flake8-django)
django-settings-module = core.settings

# Additional checks
select = E,W,F,C,N

# Statistics
statistics = True
